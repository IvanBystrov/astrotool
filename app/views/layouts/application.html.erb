<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
    <script type="text/javascript" src="http://yandex.st/jquery/1.9.1/jquery.min.js"></script>
    <meta charset="utf-8">
    <% title= content_for?(:title) ? yield(:title) : I18n::t("default.title") %>
    <title><%= title %></title>
    <%= csrf_meta_tags %>
    
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
    <link rel="stylesheet" href="/css/main.css" type="text/css" media="screen" charset="utf-8">
</head>
<body>
    <div id="all-content-wrapper">
        <!-- HEADER START -->
        <div id="header__container">
            <header id="header" class="container">
                <div class="row">
                    <div class="span3">
                        <%= link_to I18n::t("default.title"), root_path, :id => "logo" %>
                    </div>
                    <div class="span3">
                        <form id="search-form" class="form-search" action="/sky_objects/search">
                            <input type="text" name="q" id="search-input" placeholder="<%= I18n::t("default.search_placeholder") %>">
                        </form>
                    </div>
                    <div class="span4">
                        <nav>
                            <ul>
                                <li><a href="/posts"><%= I18n::t("header.posts_link") %></a></li>
                                <li><a href="/photos"><%= I18n::t("header.photos_link") %></a></li>
                                <li><a href="/page/developers"><%= I18n::t("header.developers_link") %></a></li>
                            </ul>
                            <div class="clear"></div>
                        </nav>
                    </div>
                    <div class="span1">
                        <nav>
                            <%= link_to I18n.locale.to_s.upcase, root_path, :id => 'language_switch' %>
                        </nav>
                    </div>
                    <% if user_signed_in? %>
                    <div class="span1">
                        <nav class="header__user-menu">
                            <ul>
                                <li><%= link_to I18n::t("header.logout_link"), destroy_user_session_path, :method => :delete %></li>
                            </ul>
                            <div class="clear"></div>
                        </nav>
                    </div>
                    <% else %>
                    <div class="span1">
                        <nav class="header__user-menu">
                            <ul>
                                <li><%= link_to I18n::t("header.login_link"), user_omniauth_authorize_path(:vkontakte) %></li>
                            </ul>
                            <div class="clear"></div>
                        </nav>
                    </div>
                    <% end %>
                </div>
            </header>
        </div>
        <!-- HEADER END -->
        
        <!-- MAIN CONTENT START -->
        <div class="content-wrapper">
            <%= yield %>
        </div>
        <!-- MAIN CONTENT END -->
        
        <div id="all-content-push"></div>
    </div>
    <!-- FOOTER START -->
    <div id="footer__container">
        <footer id="footer" class="container">
            <div class="row">
                <div class="span6">
                    <p class="footer__copyright"><%= link_to I18n::t("default.title"), root_path %></p>
                    
                    <div class="row">
                        <div class="span2">
                            <nav>
                                <ul>
                                    <li><%= link_to I18n::t("header.login_link"), user_omniauth_authorize_path(:vkontakte) %></li>
                                    <li><%= link_to I18n::t("footer.donate"), "/donate" %></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="span2">
                            <nav>
                                <ul>
                                    <li>
                                        <% if I18n.locale == :ru %>
                                        <%= link_to I18n::t("footer.for_novices"), "http://ru.wikipedia.org/wiki/%D0%90%D1%81%D1%82%D1%80%D0%BE%D0%BD%D0%BE%D0%BC%D0%B8%D1%8F" %>
                                        <% else %>
                                        <%= link_to I18n::t("footer.for_novices"), "http://en.wikipedia.org/wiki/Astronomy" %>
                                        <% end %>
                                            
                                        
                                    </li>
                                    <li><a href="/posts"><%= I18n::t("header.posts_link") %></a></li>
                                    <li><a href="/photos"><%= I18n::t("header.photos_link") %></a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="span2">
                            <nav>
                                <ul>
                                    <li><%= link_to I18n::t("footer.about"), "/page/about" %></li>
                                    <li><a href="/page/developers"><%= I18n::t("header.developers_link") %></a></li>
                                    <li><a href="https://github.com/IvanBystrov/astrotool"><%= I18n::t("footer.source_code_link") %></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <h3 class="popular-photos">
                        <%= I18n::t("footer.popular_photos") %>
                        <a href="/photos" class="footer__show-all-photos-link pull-right">
                            <%= I18n::t("footer.show_all_photos") %>
                        </a>
                    </h3>
                    <div class="clear"></div>
                    
                    <div class="footer__popular-photos-container">
                        <% for i in 1..16 do %>
                        <a href="/photo/<%= i %>">
                            <span style="display: block; background-color: black; width: 60px; height: 60px;">
                        </a>
                        <% end %>
                        <div class="clear"></div>
                    </div>
                    
                    
                </div>
            </div>
        </footer>
    </div>
    <!-- FOOTER END -->
    <script type="text/javascript" charset="utf-8" src="/js/bootstrap-tooltip.js"></script>
    <script type="text/javascript" charset="utf-8" src="/js/bootstrap-popover.js"></script>
    <script type="text/javascript" charset="utf-8" src="/js/infobubble.js"></script>
    <script type="text/javascript" charset="utf-8" src="/js/main.js"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-40311839-1', 'astrotool.org');
      ga('send', 'pageview');

    </script>
</body>
</html>